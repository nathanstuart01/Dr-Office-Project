<% unless @doctor.last_name.empty? %>
  <p class="z-depth-3 teal lighten-2 center">
    <strong><Dr.</strong>
    <h4 class="z-depth-3 teal lighten-2 center"><%= @doctor.first_name %> <%= @doctor.last_name %></h3>
  </p>
  <hr />
<% end %>

<% if @doctor.patients.any? %>
  <h5>Patients</h5>
  <ul>
    <% @doctor.appointments.each do |appointment| %>
      <li>
      <b>  Patient Last Name: </b>
        <%= appointment.patient.last_name %>
      <b>  Appointment Date/Time: </b>
        <%= appointment.appointment_date %>
        <%= link_to 'Cancel Appointment', appointment_path(appointment), method: :delete, class: 'btn' %>
        </li>
      <% end %>
    </ul>
    <% else %>
      <h5>No Appointments Found</h5>
  <% end %>

  <%= link_to 'Home', :root, class: 'btn' %>
