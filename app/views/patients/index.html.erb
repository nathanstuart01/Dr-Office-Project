<h1 class="z-depth-3 teal lighten-2">Patients</h1>

<table>
  <thead>
    <tr>
      <th>Patient Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><b><%= patient.first_name %> <%= patient.last_name %></b></td>
        <td><%= link_to 'Patient Appointments', patient, class: 'btn' %></td>
        <td><%= link_to 'Edit Patient Name', edit_patient_path(patient), class: 'btn' %></td>
        <td><%= link_to 'Delete Patient', patient, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create Patient', new_patient_path, class: 'btn' %>

<%= link_to 'Add Appointment For Patients', new_appointment_path, class: 'btn' %>
